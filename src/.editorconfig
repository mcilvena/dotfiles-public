# EditorConfig is awesome: https://editorconfig.org

# Global default settings
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Lua-specific settings
[*.lua]
indent_size = 2
max_line_length = 80

# Rust-specific settings
[*.rs]
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript settings
[*.{js,ts,jsx,tsx,json}]
indent_size = 2
max_line_length = 100

# Markdown settings
[*.md]
trim_trailing_whitespace = false

# Tab-specific settings
[Makefile]
indent_style = tab

[*.gitconfig]
indent_style = tab
indent_size = 4

[.gitconfig]
indent_style = tab
indent_size = 4

[.gitconfig-*]
indent_style = tab
indent_size = 4
