/* Catppuccin Mocha Theme for Rofi */

configuration {
    modi: "drun,run,window,ssh";
    display-drun: "  Apps";
    display-run: "  Run";
    display-window: "  Windows";
    display-ssh: "  SSH";
    show-icons: true;
    icon-theme: "Papirus-Dark";
    terminal: "wezterm";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    sidebar-mode: true;
    font: "JetBrainsMono Nerd Font 12";
    sort: true;
    sorting-method: "fzf";
    case-sensitive: false;
}

* {
    /* Catppuccin Mocha */
    rosewater: #f5e0dc;
    flamingo: #f2cdcd;
    pink: #f5c2e7;
    mauve: #cba6f7;
    red: #f38ba8;
    maroon: #eba0ac;
    peach: #fab387;
    yellow: #f9e2af;
    green: #a6e3a1;
    teal: #94e2d5;
    sky: #89dceb;
    sapphire: #74c7ec;
    blue: #89b4fa;
    lavender: #b4befe;
    text: #cdd6f4;
    subtext1: #bac2de;
    subtext0: #a6adc8;
    overlay2: #9399b2;
    overlay1: #7f849c;
    overlay0: #6c7086;
    surface2: #585b70;
    surface1: #45475a;
    surface0: #313244;
    base: #1e1e2e;
    mantle: #181825;
    crust: #11111b;

    background: @base;
    background-alt: @surface0;
    foreground: @text;
    selected: @mauve;
    active: @blue;
    urgent: @red;
    
    border-radius: 12px;
}

window {
    transparency: "real";
    background-color: @background;
    text-color: @foreground;
    border: 2px;
    border-color: @mauve;
    border-radius: @border-radius;
    width: 45%;
    height: 55%;
    padding: 0px;
    location: center;
    x-offset: 0;
    y-offset: 0;
}

prompt {
    enabled: true;
    padding: 0.75% 1% 0% -0.5%;
    background-color: @background-alt;
    text-color: @foreground;
    font: "JetBrainsMono Nerd Font 12";
}

entry {
    background-color: @background-alt;
    text-color: @foreground;
    placeholder-color: @overlay0;
    expand: true;
    horizontal-align: 0;
    placeholder: "Search";
    padding: 0.70% 0% 0% 0%;
    blink: true;
}

inputbar {
    children: [ prompt, entry ];
    background-color: @background-alt;
    text-color: @foreground;
    expand: false;
    border-radius: @border-radius;
    margin: 0% 0% 0% 0%;
    padding: 1%;
}

listview {
    background-color: @background;
    padding: 10px;
    columns: 2;
    lines: 10;
    spacing: 0.5%;
    cycle: false;
    dynamic: true;
    layout: vertical;
}

mainbox {
    background-color: @background;
    border-radius: @border-radius;
    children: [ inputbar, listview ];
    spacing: 2%;
    padding: 2% 1% 2% 1%;
}

element {
    background-color: @background;
    text-color: @foreground;
    orientation: horizontal;
    border-radius: @border-radius;
    padding: 1% 0.5% 1% 0.5%;
}

element-icon {
    background-color: inherit;
    text-color: inherit;
    horizontal-align: 0.5;
    vertical-align: 0.5;
    size: 32px;
    border: 0px;
}

element-text {
    background-color: inherit;
    text-color: inherit;
    expand: true;
    horizontal-align: 0;
    vertical-align: 0.5;
    margin: 0% 0.25% 0% 0.25%;
}

element selected {
    background-color: @selected;
    text-color: @background;
    border-radius: @border-radius;
}

element normal.urgent, element alternate.urgent {
    background-color: @urgent;
    text-color: @foreground;
    border-radius: @border-radius;
}

element normal.active, element alternate.active {
    background-color: @active;
    text-color: @background;
    border-radius: @border-radius;
}

element selected.urgent {
    background-color: @urgent;
    text-color: @background;
    border-radius: @border-radius;
}

element selected.active {
    background-color: @active;
    text-color: @background;
    border-radius: @border-radius;
}
